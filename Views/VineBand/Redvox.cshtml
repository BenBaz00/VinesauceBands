@model IEnumerable<VinesauceBands.Models.Album>

@{
    ViewBag.Title = "Red Vox - Vinny";
}
@section Styles{
    <link href="@Url.Content("~/css/band.css")"rel="stylesheet" type="text/css"/>
}
<div class="content col-12 col-sm-12 col-md-12 col-lg-12">
    <div class="row">
        <div class="col-12 col-sm-12 col-md-12 col-lg-12">
            <partial name="_Vinny.cshtml" />
        </div>
    </div>
    <br />

    <div class="row">
        <div class="col-12 col-sm-12 col-md-12 col-lg-12">
            <h2>About Red Vox</h2>
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 col-lg-4">
            <img src="~/images/lg/Redvox.jpg" alt="Red Vox" class="bandImg" />
            <br/>
        </div>
        <div class="col-12 col-sm-12 col-md-8 col-lg-8">
            <p>
                <i>From the <a href="https://vinesauce.fandom.com/wiki/Red_Vox" class="citeLink">Vinesauce Wiki</a></i>
            </p>
            <p>
                "Red Vox is a New York City based indie rock band created by Vinny, Mike, Joe, and Bill in 2015. Beginning primarily as a two-piece, Red Vox would eventually incorporate the talents of all four members."
            </p>
            <p>
                "Vinny has said that bands like Radiohead, Pixies, David Bowie, Pink Floyd, The Cars, Wilco, MGMT, The Clash, Tame Impala, Queens of the Stone Age and Talking Heads were influences.. The music is mainly guitar driven but with psychedelic touches. According to Vinny, his discovering the band Tame Impala was a major factor in starting Red Vox."
            </p>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-12 col-sm-12 col-md-12 col-lg-12">
            <h2>Red Vox Discography</h2>
            <hr />
        </div>

        @foreach (var item in Model)
        {
            string titletarget = @item.Title.Replace(" ", String.Empty);

        <div class="dropdown col-12 col-sm-12 col-md-12 col-lg-12">
            <button class="btn btn-primary album" type="button" data-toggle="collapse" data-target="#@titletarget" aria-expanded="false" aria-controls="@titletarget">
                <h5>
                    @Html.DisplayFor(modelItem => item.Title)
                    (@Html.DisplayFor(modelItem => item.Year))
                </h5>
            </button>

            <div class="collapse" id="@titletarget">
                <div class="card card-body">
                    @foreach (var song in item.Songs)
                        {
                    <a class="text-dark " asp-area="" asp-controller="VineBand" asp-action="Comments" asp-route-id="@song.SongID">@Html.DisplayFor(modelItem => song.SongTitle)</a>
                        }
                </div>
            </div>

        </div>
        }
    </div>
</div>